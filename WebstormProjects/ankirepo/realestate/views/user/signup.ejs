<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!--end::Web font -->
    <!--begin::Base Styles -->
    <link href="/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="/assets/demo/demo4/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Base Styles -->
    <link rel="shortcut icon" href="/assets/demo/demo4/media/img/logo/favicon.ico" />
</head>
<!-- end::Head -->
<!-- end::Body -->

<body style ="width:100%"class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-1" id="m_login"
            style="background-image: url(/assets/app/media/img//bg/bg-1.jpg);background-attachment: fixed;">
            <div class="m-grid__item m-grid__item--fluid m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo">
                        <a href="#">
                            <img src="/assets/app/media/img//logos/logo-1.png">
                        </a>
                    </div>

                    <div class="m-login__signup1">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                <%= i18n.__("SIGN_UP")%>
                            </h3>
                            <div class="m-login__desc">
                                <%= i18n.__("ENTER_YOUR_DETAILS_TO_CREATE_ACCOUNT")%>
                            </div>
                        </div>
                        <div style=""  class="">
                            <% if (message.length > 0) {%>
                                <div class="m-alert alert m-alert--outline alert-danger alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <%=message %>
                                </div>
                            <%}%>
                        </div>
                        <form class="m-login__form m-form" method="post" action="signup">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="<%= i18n.__('FULL_NAME')%>" name="fullname" >
                            </div>
                            
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="<%= i18n.__('EMAIL')%>" name="email" autocomplete="off" >
                            </div>
                            
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="password" placeholder="<%= i18n.__('PASSWORD')%>" name="password">
                            </div>
                            
                            <div class="form-group m-form__group">
                                <input class="form-control m-input m-login__form-input--last" type="password" placeholder="<%= i18n.__('CONFIRM_PASSWORD')%>" name="rpassword">
                            </div>
                        
                            <div class="row form-group m-form__group m-login__form-sub">
                                <div class="col m--align-left">
                                    <label class="m-checkbox m-checkbox--light">
                                        <input type="checkbox" name="agree">
                                        <%= i18n.__("I_AGREE_THE")%>
                                            <a href="#" class="m-link m-link--focus">
                                                <%= i18n.__("TERMS_AND_CONDITIONS")%>
                                            </a>
                                            .
                                            <span></span>
                                    </label>
                                    <span class="m-form__help"></span>
                                </div>
                            </div>
                            <div class="m-login__form-action">
                                <button id="ds" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                                    <%= i18n.__("SIGN_UP")%>
                                </button>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <button id="" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn">
                                    <a href="login"  style="color:cyan">
                                        <%= i18n.__("CANCEL")%>
                                    </a>
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="m-login__account">
                        <span class="m-login__account-msg">
                            <%= i18n.__("YOU_HAVE_AN_ACCOUNT")%>
                        </span>
                        &nbsp;&nbsp;
                        <a href="login" class="m-link m-link--light m-login__account-link">
                            <%= i18n.__("SIGN_IN")%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end:: Page -->
    <!--begin::Base Scripts -->
    <script src="/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="/assets/demo/demo4/base/scripts.bundle.js" type="text/javascript"></script>
    <!--end::Base Scripts -->
    <!--begin::Page Snippets -->
        <!--end::Page Snippets -->
</body>
<!-- end::Body -->

</html>